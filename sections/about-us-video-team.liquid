<section class="bg-white-gray">
  <div class="wrapper ">
    <h2 class="text-center size-text padding-top mobile-heading">{{ section.settings.title }}</h2>

    <div class="test-padding">
      <div class="videoWrapper">
        <!-- Copy & Pasted from YouTube -->
        <iframe allowfullscreen frameborder="0" height="349" src="https://www.youtube.com/embed/n_dZNLr2cME?rel=0&hd=1" width="560"></iframe>
      </div>
    </div>
  </div>
</section>
{% schema %}

{
  "name": "About us video",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Das sind wir"
    }
  ]
}

{% endschema %}

{% style %}

.bg-white-gray {
  background-image: linear-gradient(180deg, #ffffff 50%, #F5F5F5 50%);
}

.size-text {
  font-family: 'Work Sans';
  font-style: normal;
  font-weight: 700;
  font-size: 40px;
  line-height: 48px;
  text-align: center;
  letter-spacing: 0.01em;
  color: #242424;
}

.padding-top {
  padding-top: 40px;
  padding-bottom: 24px;
}

.test-padding {
  padding: 20px;
  background-color: #FFF7CA;
  max-width: 80%;
  margin: auto;
}


.videoWrapper {
  position: relative;
  padding-bottom: 56.25%;
  /* 16:9 */
  padding-top: 25px;
  height: 0;
}

.videoWrapper iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.text-padding {
  padding-top: 64px;
  padding-bottom: 30px;
}

@media only screen and (max-width: 758px) {
  .mobile-heading {
    font-size: 22px;
    line-height: 29px;
    text-align: center;
    letter-spacing: 0.02em;
  }

  .test-padding {
    max-width: 100%;
  }
}

{% endstyle %}